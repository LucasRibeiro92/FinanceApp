<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".view.AddTransactionActivity">

    <!-- Back Button Icon -->
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/baseline_arrow_back_24"
        android:contentDescription="Back"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="16dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ivBack"
        android:text="Add Transaction"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <!-- Budget Category Spinner -->
    <Spinner
        android:id="@+id/spinnerBudget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_marginTop="16dp"
        android:textAlignment="center"/>

    <!-- Amount Input -->
    <EditText
        android:id="@+id/etTransactionName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:inputType="text"
        android:layout_below="@id/spinnerBudget"
        android:layout_marginTop="16dp"
        android:textColorHint="@color/white"/>

    <!-- Amount Input -->
    <EditText
        android:id="@+id/etTransactionAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Amount"
        android:inputType="numberDecimal"
        android:layout_below="@id/etTransactionName"
        android:layout_marginTop="16dp"
        android:textColorHint="@color/white"/>

    <!-- Transaction Type Radio Group -->
    <RadioGroup
        android:id="@+id/rgTransactionType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/etTransactionAmount"
        android:layout_marginTop="16dp">

        <RadioButton
            android:id="@+id/rbIncome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Income"
            android:textColor="@color/white"/>

        <RadioButton
            android:id="@+id/rbExpense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expense"
            android:textColor="@color/white"/>
    </RadioGroup>

    <!-- Category Spinner -->
    <Spinner
        android:id="@+id/spinnerCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rgTransactionType"
        android:layout_marginTop="16dp"
        android:textAlignment="center"/>

    <!-- Selected Date Display -->
    <TextView
        android:id="@+id/tvSelectedDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No date selected"
        android:layout_below="@id/spinnerCategory"
        android:layout_marginTop="16dp"/>

    <!-- Date Picker -->
    <Button
        android:id="@+id/btnDatePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Date"
        android:layout_below="@id/tvSelectedDate"
        android:layout_marginTop="16dp"/>

    <!-- Save Button -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_below="@id/btnDatePicker"/>

</RelativeLayout>
